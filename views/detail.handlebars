<form action="/todos/delete/{{{todo.id}}}?_method=DELETE" method="POST" style="display:inline">
  <div class="input-group">

    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" {{#if todo.done}}checked{{/if}} disabled>
      </div>

    </div>
    <input type="text" value="{{{todo.name}}}" class="form-control" disabled>
    <div class="input-group-append">
      <a href="/todos/edit/{{{todo.id}}}" class="btn btn-success">edit</a>

      <button type="submit" class="btn btn-danger">delete</button>
    </div>
  </div>

</form>