<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1>Register</h1>

        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter your name"
              value="{{{name}}}">
          </div>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your e-mail"
              value="{{{email}}}">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password"
              value="{{{password}}}">
          </div>
          <div class="form-group">
            <label for="password2">Confirm your password</label>
            <input type="password" id="password2" class="form-control" placeholder="Enter your password again"
              value="{{{password2}}}">
          </div>

          <button type="submit" class="btn btn-primary btn-block">Send out</button>
        </form>

      </div>

    </div>

  </div>

</div>